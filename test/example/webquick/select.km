import Q from 'rename:WebQuick';
import assets from './assets';

do webui-init 'WebQuick Select' DOM;

do webui-inject-css [assets::style-css];

do WebUi::ExitWhenWindowClosed;

private const DOM: NoExcept*[WebUi::Node]
    ~ with-reactive* &(selection) := 'foo',
    render (
        (Q::Styled ['container'] (Q::Container [
            (Q::Styled ['row'] (Q::Container [
                Q::Select selection [('foo','Foo'),('bar','Bar'),('42','42')],
                Q::TextWatch (selection.watch)
            ])),
            Q::Button 'reset' (selection.update (&(_)('foo')))
        ]))
    );
