import UI from 'rename:WebQuick';
import assets from './assets';

do webui-init 'WebQuick Select' DOM;

do webui-inject-css [assets::style-css];

do WebUi::ExitWhenWindowClosed;

private const DOM: NoExcept*[WebUi::Node]
    ~ with-reactive* &(selection) := 'foo',
    UI::Styled ['container']
    (UI::Container [
        (UI::Styled ['row']
        (UI::Container [
            UI::Select selection [('foo','Foo'),('bar','Bar'),('42','42')],
            UI::TextWatch (selection.watch)
        ])),
        UI::Button 'reset' (selection.update (&(_)('foo')))
    ]);
