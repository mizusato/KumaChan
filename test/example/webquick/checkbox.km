import UI from 'rename:WebQuick';
import assets from './assets';

do webui-init 'WebQuick Checkbox' DOM;

do webui-inject-css [assets::style-css];

do WebUi::ExitWhenWindowClosed;

private const DOM: NoExcept*[WebUi::Node]
    ~ with-reactive* &(ok) := Yes,
    UI::Styled ['container']
    (UI::Container [
        UI::Checkbox ok,
        UI::TextWatch
            (ok.watch.map* (&(ok)(if ok: 'checked', else: 'not checked'))),
        UI::Button 'toggle' (ok.update (&(ok)(not ok)))
    ]);
