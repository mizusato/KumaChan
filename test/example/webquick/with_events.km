import UI from 'rename:WebQuick';
import assets from './assets';

do webui-init 'WebQuick WithEvents' DOM;

do webui-inject-css [assets::style-css];

do WebUi::ExitWhenWindowClosed;

public function with-mouse-position:
    ( &((Float,Float), (&(NoExcept*[(Float,Float)])(NoExcept*[WebUi::Node])))
        NoExcept*[WebUi::Node] )
    ( &(init, k)
        ~ with-reactive* &(pos) := init,
        ~ then* &(x) := random,
        UI::WithEvents
            (dom-event ("mousemove.hook#" (str x))
                (dom-callback ( &(ev)
                    let x := ev.get-float 'webuiCurrentTargetX',
                    let y := ev.get-float 'webuiCurrentTargetY',
                    $(pos <- (x, y))
                )))
            (k (watch pos))
    );

private const DOM: NoExcept*[WebUi::Node]
    UI::Styled ['container']
    (UI::Container [
        ~ with-mouse-position &(pos) := (0.0, 0.0),
        UI::Styled ['box']
        (UI::Container [
            UI::TextWatch (pos | map* (&(x,y)("x=#, y=#" (str x) (str y))))
        ])
    ]);
