do
    & err := catch
        & await { println 'Number a:' },
        & str-a := await { scanln () },
        & await { println 'Number b:' },
        & str-b := await { scanln () },
        let sum? :=
            & a := maybe? str-a.{parse-real},
            & b := maybe? str-b.{parse-real},
            { Just (a + b) },
        switch sum?:
        case Just sum:
            { println { str sum } },
        case Null:
            { println 'Null' },
        end,
    { crash err };
