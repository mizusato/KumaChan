do
    | err := catch
        | await { println 'Number a:' },
        | str-a := await { scanln () },
        | await { println 'Number b:' },
        | str-b := await { scanln () },
        let sum? :=
            | a := maybe? str-a.{parse-real},
            | b := maybe? str-b.{parse-real},
            { Some (a + b) },
        switch sum?:
        case Some sum:
            { println { str sum } },
        case None:
            { println 'None' },
        end,
    { crash err };
