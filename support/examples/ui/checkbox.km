import assets from './assets';

do ui-init 'WebQuick Checkbox' DOM;

do ui-inject-css [assets::style-css];

do UI::ExitWhenWindowClosed;

private const DOM: NoExcept*[UI::Node]
    ~ with-reactive* &(ok) := Yes,
    UI::Styled ['container']
    (UI::Container [
        UI::Checkbox ok,
        UI::TextWatch
            (ok.watch.map* (&(ok)(if ok: 'checked', else: 'not checked'))),
        UI::Button 'toggle' (ok.update (&(ok)(not ok)))
    ]);
