do Window.{show-at-center};

do Window.{on-close}.{connect {exit 0}};

do
    & buf := reactive 'command example',
    (Label bind buf.{watch})
        . { with CommandOpen.{activated}.{connect (buf <- 'activated: open')} }
        . { with CommandSave.{activated}.{connect (buf <- 'activated: save')} }
        . { with CommandClose.{activated}.{connect (buf <- 'activated: close')} };
