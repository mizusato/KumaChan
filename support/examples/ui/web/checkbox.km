import window from './window';

do { window::mount Root };

const Root: ui::Component :=
    & ok := use { ui-state Yes },
    { (ui-container styled ['container']) [
        { ui-checkbox ok },
        if ok:
            { ui-label 'checked' },
        else:
            { ui-label 'not-checked' },
        { ui-button ('toggle', (ok update &(ok) => {not ok})) }
    ] };
